page{
  background: #F5F7F9;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center
}
.header{
  height: 96rpx;
  width: 100%;
  background:  #0D86EB;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center
}
.header-font{
  margin-left: 30rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-family: PingFangSC-Medium;
  font-size: 34rpx;
  color: #FFFFFF;
  letter-spacing: 0;
}
.changeUser{
  width: 40rpx;
  height: 44rpx;
  margin-right: 30rpx;
}
.patient-list{
  margin-top: 20rpx;
  width: 666rpx;
  background: #ffffff;
  display: flex;
  flex-flow: column nowrap;
  border-radius: 4rpx;
  padding: 24rpx 0 20rpx 28rpx;
  position: relative
}
.patient-name{
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #232323;
  letter-spacing: 0;
  font-weight: 600;
  margin-bottom: 12rpx;
}
.patient-left{
  font-family: PingFangSC-Regular;
  height: 50rpx;
  font-size: 26rpx;
  color: #232323;
  letter-spacing: 0;
  line-height: 50rpx;
  display: flex;
  flex-flow: row nowrap;
}
.patient-right{
  color: #A3A3A3;
}
.radius{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #F5F7F9;
  position: absolute;
  left: -20rpx;
  bottom: -20rpx;
}
.radius2{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #F5F7F9;
  position: absolute;
  bottom: -20rpx;
  right: -20rpx;
}
.relation{
  position: absolute;
  width: 98rpx;
  height: 40rpx;
  border-radius: 2rpx;
  background: #AED4FC;
  text-align: center;
  line-height: 40rpx;
  right: 0rpx;
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #0D86EB;
  letter-spacing: 0;
}
.trigon{
  width: 0;
  height: 0;
  border: 20rpx solid transparent;
  border-left: 20rpx solid #ffffff;
  position: absolute;
  left: 0rpx;
  top: 0rpx;
}
.choose-buttun{
  width: 18rpx;
  height: 18rpx;
  padding: 8rpx;
  border-radius: 50%;
  background: #ffffff;
  border: 2rpx solid  #0D86EB;
  position: absolute;
  top: 112rpx;
  right: 28rpx;
}
.choose-buttun2{
  border: 2rpx solid #A3A3A3;
}
.choose-show{
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background:#0D86EB; 
}
.choose-hidden{
  display: none
}