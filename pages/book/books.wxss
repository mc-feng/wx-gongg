/* 模态框 */
.btn {
  width: 80%;
  padding: 20rpx 0;
  border-radius: 10rpx;
  text-align: center;
  margin: 40rpx 10%;
  background: #000;
  color: #fff;
}
 
/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
 
/*content*/
.drawer_box {
  width: 650rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #fff;
  margin: -150px 50rpx 0 50rpx;
  border-radius: 3px;
}
 
.drawer_title{
  padding:15px;
  font: 20px "microsoft yahei";
  text-align: center;
}
.drawer_content {
  text-align:center;
  font-size:32rpx;
  color:#ccc;
  width:100%;
  margin-bottom:40rpx;
}
/* 模态框底部按键 */
.btn-bottom{
  display: flex;
  flex-flow: row nowrap;
  font: 20px "microsoft yahei";
  text-align: center;
  border-top: 1px solid #E8E8EA;
}
.btn_cloose{
  width: 50%;
  color: #666666;
  background: #fff;
}
.btn_cloose::after {
  border: 0;
}
.btn_ok{
  width: 50%;
  color: #3CC51F;
  background: #fff;
}
.btn_ok::after {
  border: 0;
  border-left: 2rpx solid #E8E8EA
}