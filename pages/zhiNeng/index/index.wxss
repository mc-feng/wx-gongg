/* pages/zhiNeng/index/index.wxss */
page{
  background: rgba(246,249,251,1);
}
.component-headr{
  width: 100%;
  color: #fff;
  background: #0D86EB;
}
.warp{
  margin:36rpx auto;
  width: 680rpx;
}
.item{
  height: 230rpx;
  background: #fff;
  margin-bottom: 50rpx;
  border-radius:12rpx;
  padding: 32rpx;
  box-sizing: border-box
}
.item-header{
  position: relative;
  height: 40rpx;
}
.dian{
  position: absolute;
  right: 10rpx;
  font-size:20rpx;
  font-weight:500;
  color:#A3A3A3;
  line-height:28rpx;
  display: flex;
  align-items: center;
}
.battery {
    position: relative;
    display: inline-block;
    height: 22rpx;
    width: 40rpx;
    padding: 2rpx;
    border: 2rpx solid #CCCCCC;
    background: #fff;
    border-radius: 4rpx;
    margin-right: 8rpx;
    box-sizing: border-box
}
.battery-top-warp{
  position: absolute;
  right: -6rpx;
  height: 22rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  top: -2rpx;
}
.battery-top {
    width: 4rpx;
    height: 10rpx;
    background: #CCCCCC;
    box-sizing: border-box
}
.power{
    position: absolute;
    top: 4rpx;
    left: 4rpx;
    bottom: 4rpx;
    right: 10rpx;
    border-radius: 4rpx;
    background: #CCCCCC;
    box-sizing: border-box
}
.item-content{
  display: flex;
  justify-content: space-between;
}
.content-left{
  display: flex;
}
.content-iamge{
  width: 88rpx;
  height: 88rpx;
}
.content-type{
  font-size:44rpx;
  font-weight:500;
  color:rgba(35,35,35,1);
  margin-left: 22rpx;
  display: flex;
  flex-flow: column;
  justify-content: center;
}
.content-right{
  font-size:50rpx;
  font-weight:500;
  color:rgba(35,35,35,1);
  line-height:88rpx
}
.content-tips{
  font-size:26rpx;
  font-weight:500;
  color:rgba(255,0,0,1);
  line-height:36rpx;
}
.botton-font{
  margin-top: 106rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(163,163,163,1);
  line-height:34rpx;
}