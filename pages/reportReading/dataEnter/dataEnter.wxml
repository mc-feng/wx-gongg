     <text class='complete-font'><text class='tip-click'>点击添加</text><text class='complete-font'>您的报告单上未识别遗漏指标</text></text>
</view> -->
<view class='submit' wx:if="{{!timestamp}}">
  <view class='submit-buttun' bindtap='showView'>点击添加</view>
  <view class='submit-font'>可添加您的报告单上未识别遗漏指标</view>
</view>
<view class='examine-image'>
  <block wx:for="{{images}}" wx:key="{{index}}">
    <image src='{{item}}' class='examine-image-left' bindtap="previewImage" mode="aspectFill" data-src="{{item}}" data-index="{{index}}"></image>
  </block>
  <!-- <view class='examine-image-right'>查看原图</view> -->
</view>
<block wx:if="{{timestamp}}">
  <view class='save-submit'>
   <view class='save-submit-reading2' bindtap='readinged'>查看解读报告</view>
  </view>
</block>
<block wx:else>
  <view class='save-submit'>
    <view class='save-submit-save' bindtap='submit'>保存</view>
    <view class='save-submit-reading' bindtap='reading'>一键解读</view>
  </view>
</block>
<!-- 弹框 -->
<view class="commodity_screen" wx:if="{{showModalStatus}}" bindtap='hideView'></view>
<view animation="{{animationData}}" class="commodity_attr_box" wx:if="{{showModalStatus}}">
  <view class='toast-title'>添加遗漏数据</view>
  <view class='toast-item'>
    <view class='toast-item-name'>类目</view>
    <view class='toast-item-input'>
      <view class='select' bindtap ='selectTap'>
          <text class='select_text'>{{selectData[index].name}}</text>
          <image class='select_img {{show&&"select_img_rotate"}}' src='../../../images/smallicon/xiala@2x.png'></image>         
      </view>
      <view class='option_box' style='height:{{show?(selectData.length>5?324:selectData.length*60):0}}rpx;'>
          <text class='option' style='{{index==selectData.length-1&&"border:0;"}}' wx:for='{{selectData}}' wx:key='this' data-index='{{index}}' bindtap='optionTap'>{{item.name}}</text>
      </view>
    </view>
  </view>
  <view class='toast-item'>
    <view class='toast-item-name'>项目</view>
    <view class='toast-item-input' id='mjltest'>
      <view class='select' bindtap ='selectTap2'>
          <text class='select_text'>{{selectData2[index2].indexName}}</text>
          <image class='select_img {{show2&&"select_img_rotate"}}' src='../../../images/smallicon/xiala@2x.png' wx:if="{{selectData2.length!=0}}"></image>         
      </view>
      <view class='option_box' style='height:{{show2?(selectData2.length>5?324:selectData2.length*60):0}}rpx;top:{{sHeight2*2}}rpx'>
          <text class='option' style='{{index2==selectData2.length-1&&"border:0;"}}' wx:for='{{selectData2}}' wx:key='this' data-index='{{index}}' bindtap='optionTap2'>{{item.indexName}}</text>
      </view>
    </view>
  </view>
  <view class='toast-item'>
    <view class='toast-item-name'>结果</view>
    <view class='toast-item-input'>
     <input class='toast-item-write' bindblur="saveToastData" value='{{toastData}}'></input>
    </view>
  </view>
  <view class='toast-item'>
    <view class='toast-item-name'>范围</view>
    <view class='toast-item-input2'>
     <view class='toast-item-content'>
      {{selectData2[index2].referenceValue}}
     </view>
    </view>
  </view>
  <view class='toast-item'>
    <view class='toast-item-name'>单位</view>
    <view class='toast-item-input2'>
      <view class='toast-item-content'> 
       {{selectData2[index2].unit}}
      </view>
    </view>
  </view>
  <view class='toast-buttun' bindtap='confirmToast'>确认</view>
  <view class='toast-buttun2' bindtap='cattyToast'>继续添加</view>
</view>