</view> -->
<view class='examine-data'>
  <view class='examine-font'>检查日期</view>
  <input class='examine-number' value='{{checkTime}}' bindblur="saveCheckTime"></input>
</view>
<view class='examine-data'>
  <view class='examine-font'>检查医院</view>
  <input class='examine-number' value='{{hospitalName}}' bindblur="saveHospitalName"></input>
</view>
<block wx:for="{{reportResult}}" wx:key="{{index}}">
  <view class='report-title'>
    <view class='title-icon'></view>
    <view class='title-font'>{{item.checkName}}</view>
  </view>
  <view class='xue-content'>
    <view class='xue-title'>
      <view>项目</view>
      <view class='jieguo'>结果</view>
      <view class='danwei'>单位</view>
      <view class='details'>范围</view>
    </view>
    <block wx:for="{{item.indexArray}}" wx:for-item="deal" wx:for-index="dealIndex" wx:key="{{dealIndex}}">
      <view class='content-result'>
        <view class='content-xiangmu'>{{deal.name}}</view>
        <input class='content-jieguo' value='{{deal.value}}' bindblur="saveData" data-index="{{dealIndex}}" data-big="{{index}}"></input>
        <view class='content-position'></view>
        <view class='content-danwei'>{{deal.unit}}</view>
        <image src='../../../images/reportReading/details@2x.png' class='content-details' bindtap='changeFanwei' data-index="{{dealIndex}}" data-big="{{index}}"></image>
      </view>
      <view class='content-fanwei' wx:if="{{deal.check}}">
          <view class='content-fanwei-title'>参考值</view>
          <view class='content-fanwei-content'>{{deal.referenceValue}}</view>
      </view>
    </block>
  </view>
</block>
