  font-family: "iconfont";
  font-size: 50rpx;
  font-style: normal;
}
.left::before{ 
  content:"\e64b";
  position: fixed;
  top: 62rpx;
  left: 28rpx;
  color: #fff;
  z-index: 10
}
.right::before{
  content:"\e633";
  font-size: 28rpx;
}
.top{
  margin-top: -12rpx;
}
