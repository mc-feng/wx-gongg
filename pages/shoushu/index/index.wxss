/* pages/shoushu/index/index.wxss */
page{
  display: flex;
  flex-flow: column;
  align-items: center;
  background:  #F5F7F9
}
.header{
  height: 360rpx;
  background: linear-gradient(-56deg, #0E63FD 0%, #7DB7FF 100%);
  width: 100%;
  position: relative
}
.header-img{
  width: 688rpx;
  height: 258rpx;
  position: absolute;
  bottom: 0rpx;
  right: 50rpx;
}
.header-font{
  font-size: 52rpx;
  color: #FFFFFF;
  position: absolute;
  left: 70rpx;
  bottom: 164rpx;
}
.component-headr{
  width: 100%;
  color: #0D86EB ;
  background: #fff
}
